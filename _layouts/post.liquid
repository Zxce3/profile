---
layout: default
---

<div id="post">
  <div class="post-title text-center"><h1>{{page.title}}</h1></div>
  <div class="d-flex justify-content-center mb-20">
    {% for category in page.categories %}
    <a
      class="post-categories m-10"
      href="{{ site.baseurl }}/category/{{ category | slugify }}/index.html"
      >{{ category }}</a
    >
    {% endfor %}
    <div class="post-date m-10">{{ page.date | date: '%B %d, %Y' }}</div>
  </div>
  <div class="body m-auto">{%- include post-layout.liquid content=content -%}</div>
  
  <p class="text-center mb-0 invisible">There is nothing.</p>
</div>
<div class="content"></div>
